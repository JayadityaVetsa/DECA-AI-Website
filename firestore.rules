rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all authenticated users to read and write questions
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow users to write/read their own seenQuestions
    match /users/{userId}/seenQuestions/{seenId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/testResults/{testId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /forumQuestions/{questionId} {
      allow read, write: if request.auth != null;
      match /replies/{replyId} {
        allow read, write: if request.auth != null;
      }
    }
  }
} 